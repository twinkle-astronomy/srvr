<svg width="{{ device.width }}" height="{{ device.height }}" xmlns="http://www.w3.org/2000/svg">
    <!-- White background -->
    <rect width="100%" height="100%" fill="white"/>

    <!-- Black header bar -->
    <rect x="0" y="0" width="{{ device.width }}" height="80" fill="black"/>

    <!-- Header text (white on black) -->
    <text x="{{ device.width | divided_by: 2 }}" y="50" font-family="Liberation Sans, DejaVu Sans, Arial, sans-serif" font-size="36" font-weight="bold" text-anchor="middle" fill="white">
        TRMNL Display
    </text>

    <!-- Current time (prominent) -->
    <text x="{{ device.width | divided_by: 2 }}" y="{{ device.height | divided_by: 2 }}" font-family="Liberation Sans, DejaVu Sans, Arial, sans-serif" font-size="120" font-weight="bold" text-anchor="middle" fill="black">
        {{ time }}
    </text>

    <!-- Date below time -->
    <text x="{{ device.width | divided_by: 2 }}" y="{{ device.height | divided_by: 2 | plus: 60 }}" font-family="Liberation Sans, DejaVu Sans, Arial, sans-serif" font-size="32" text-anchor="middle" fill="black">
        {{ date }}
    </text>

    <!-- Black footer bar -->
    <rect x="0" y="{{ device.height | minus: 80 }}" width="{{ device.width }}" height="80" fill="black"/>

    <!-- Footer text (white on black) -->
    <text x="{{ device.width | divided_by: 2 }}" y="{{ device.height | minus: 30 }}" font-family="Liberation Sans, DejaVu Sans, Arial, sans-serif" font-size="24" text-anchor="middle" fill="white">
        {{ date }} | FW {{ device.fw_version }}
    </text>
</svg>